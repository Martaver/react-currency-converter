{
  "compilerOptions": {
    "declaration": false,
    "module": "system",
    "target": "es6",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "isolatedModules": false,
    "jsx": "react",
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "noResolve": false,
    "outDir": "../out",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": false,
    "allowUnusedLabels": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  },
  "filesGlob": [
    "**/*.ts",
    "**/*.tsx",
    "!node_modules/**"
  ],
  "files": [
    "typings/common.d.ts",
    "typings/modules.d.ts",
    "typings/services.d.ts",
    "app.tsx",
    "components/currency-converter-header.tsx",
    "components/currency-converter.tsx",
    "components/currency-input.tsx",
    "components/currency-select.tsx",
    "components/currency-valuation-change.tsx",
    "components/currency-valuation-header-calendar.tsx",
    "components/currency-valuation-header-select.tsx",
    "containers/currency-converter-container.tsx",
    "containers/old.tsx",
    "layouts/main-layout.tsx",
    "pages/about-page.tsx",
    "pages/currency-converter-page.tsx",
    "pages/home-page.tsx",
    "reducers/currency-rates-reducer.tsx",
    "reducers/index.tsx",
    "reducers/tests/currency-rates-reducer.tests.tsx",
    "router.tsx",
    "services/fixer/currency-rates.tsx",
    "store.tsx",
    "stores/app-store.spec.tsx",
    "stores/app-store.tsx",
    "test-runner.tsx",
    "utils/accounting.tsx",
    "utils/index.tsx",
    "utils/logging.tsx",
    "utils/validation.tsx"
  ],
  "atom": {
    "rewriteTsconfig": true,
    "formatOnSave": false
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2,
    "newLineCharacter": "\r\n",
    "convertTabsToSpaces": true,
    "insertSpaceAfterCommaDelimiter": true,
    "insertSpaceAfterSemicolonInForStatements": true,
    "insertSpaceBeforeAndAfterBinaryOperators": true,
    "insertSpaceAfterKeywordsInControlFlowStatements": true,
    "insertSpaceAfterFunctionKeywordForAnonymousFunctions": false,
    "insertSpaceAfterOpeningAndBeforeClosingNonemptyParenthesis": false,
    "placeOpenBraceOnNewLineForFunctions": false,
    "placeOpenBraceOnNewLineForControlBlocks": false
  },
  "compileOnSave": false
}
